<AddPasswordScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10
        
        TextInput:
            id: password_input
            hint_text: "Digite sua senha"
            multiline: False
            password: True  # Esconde o texto, já que é uma senha

        Button:
            text: "Salvar Senha"
            font_size: 24
            on_press:
                app.root.current = 'home'  # Volta para a tela inicial
                # Chama a função para salvar a senha
                root.save_password(password_input.text)
